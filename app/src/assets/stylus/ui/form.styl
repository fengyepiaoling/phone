.form-group
  .form-row
    .ts-option
      display flex
      height 100%
      justify-content space-between
      align-items stretch
      transform rotate(0deg) // fix 子元素超出边框圆角部分不隐藏的问题
      overflow hidden
      .ts-label
        flex 0 0 120px
        padding-left 10px
        display inline-flex
        align-items center
      .ts-text
        flex 1 1 auto
        min-width 1px // fix padding把width撑开的问题
        input
          padding 0 10px
          background-color $color-white
          box-shadow 0 0 1px 1px #eee inset
          outline none
          &focus
            outline #fc9153 solid 1px;
            outline-offset -1px;